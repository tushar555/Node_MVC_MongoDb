<html lang="en">
<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/nav.ejs') %>
    <main style="width: 35%;">
        <% if(errorMessage){ %>

        <div> <%= errorMessage%> </div>
        <%}%>
        <form action="/reset" method="POST">
            <div class="form-control">
                <label>E-mail</label>
                <input type="text" name="email" id="email">
